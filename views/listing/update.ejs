<% layout("./layout/boilerplate") %>
<body>
  <div class="row mt-2">
    <div class="col-8 offset-2">
      <h1>Edit the form</h1>
      <form
        action="/listing/<%=listing.id%>/edit?_method=PUT"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Enter the title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            required
            id="title"
            class="form-control"
          />
          <div class="invalid-feedback">Please choose a title.</div>
        </div>
        <div class="mb-3">
          <label for="discription" class="form-label"
            >Enter the discription</label
          >
          <textarea
            type="text"
            name="listing[description]"
            id="discription"
            class="form-control"
            required
          >
       <%= listing.description %></textarea
          >
          <div class="invalid-feedback">Please give a valid description.</div>
        </div>
        <div class="mb-3">
          <div>
            privew image:
            <br />
            <img src="<%= orgImage %>" alt="privew image" class="privewImg" />
          </div>
          <label for="image-url" class="form-label">upload new image</label>
          <input
            type="file"
            name="listing[image]"
            id="image-url"
            class="form-control"
          />
          <div class="invalid-feedback">Please give the imgae url.</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Enter the price</label>
            <input
              type="number"
              name="listing[price]"
              value="<%= listing.price %>"
              required
              id="price"
              class="form-control"
            />
            <div class="invalid-feedback">Please show the price.</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Enter the location</label>
            <input
              type="text"
              name="listing[location]"
              value="<%= listing.location %>"
              required
              id="location"
              class="form-control"
            />
            <div class="invalid-feedback">Please choose location.</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">Enter the country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
            required
            id="country"
            class="form-control"
          />
          <div class="invalid-feedback">Please choose a country.</div>

          <div class="mb-3">
            <label for="category" class="form-label">Enter the country</label>
            <select
              class="form-select"
              name="listing[category]"
              id="category"
              class="form-control"
             
            >
            <option value = "OMG"  selected>OMG</option>
            <option value="castel">castel</option>
            <option value="surfing">surfing</option>
            <option value="design">design</option>
            <option value = "artic">artic</option>
            <option value="island">island</option>
            <option value="lake">lake</option>
            <option value="CountrySide">CountrySide</option>
            <option value="Rooms">Rooms</option>
            <option value="farms">farms</option>
            </select>
            <div class="invalid-feedback">Please choose a category.</div>
          </div>
        </div>

        <button class="btnUpd btn mt-2 mb-3">Update</button>
      </form>
    </div>
  </div>
</body>
